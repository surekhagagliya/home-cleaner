<div>
    <%= form_for(@cleaner, url: cleaners_path, remote: true , html: {class: 'cleaner_form table'}) do |form| %>
        <%if @cleaner.errors.any? %>
            <h2>
                <%= pluralize(@cleaner.errors.count, 'error')%>
                this cleaner information save before plz follow validation
            </h2>
            <% @cleaner.errors.full_messages.each do |error|%>
                <div><%= error%></div>
            <% end %>
        <% end %>
        <div class="form-group">
            <%= form.label 'First Name'%><span>*</span>
            <%= form.text_field :first_name, class: 'form-control', placeholder: 'enter your first name'%>
        </div>
        <div class="form-group">
            <%= form.label 'Last Name'%><span>*</span>
            <%= form.text_field :last_name, class: 'form-control', placeholder: 'enter your last name'%>
        </div>
        <div class="form-group">
            <%= form.label 'City Lists'%><span>*</span><br>
            <%= form.collection_check_boxes(:city_ids, City.all, :id, :name, checked: @cleaner.cities.map(&:id)) do |b| %>
                <%= b.check_box %> <%= b.label %>
            <% end %>
        </div>
        <div class="form-group">
            <%= form.label 'Phone No'%><span>*</span>
            <%= form.number_field :phone_no, class: 'form-control', placeholder: 'enter your phone no'%>
        </div>
        <div class="form-group">
            <%= form.label 'Quality Score'%><span>*</span>
            <%= form.number_field :quality_score, class: 'form-control', placeholder: 'enter your quality score'%>
        </div>
        <%= form.submit 'Submit', class: 'btn btn-primary'%>
    <% end %>
</div>
