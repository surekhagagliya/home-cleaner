<div class="col-md-6">
    <%= form_for(@booking, html: {class: 'booking_form table'}) do |form| %>
        <%if @booking.errors.any? %>
            <h2>
                <%= pluralize(@booking.errors.count, 'error')%>
                this booking information save before plz follow validation
            </h2>
            <% @booking.errors.full_messages.each do |error|%>
                <div><%= error%></div>
            <% end %>
        <% end %>
        <div class="form-group">
            <%= form.label 'Cleaner Lists'%><span>*</span>
            <%= form.collection_select :city_id, City.all, :id, :name, { include_blank: "Select City"}, { class: "form-control city-dropdown"}  %>
        </div>
        <div class="form-group">
            <%= form.label 'Cleaner Lists'%><span>*</span>
            <%= form.collection_select :cleaner_id, Cleaner.all, :id, :first_name, { include_blank: "Select Cleaner"}, { class: "form-control cleaner-dropdown"}  %>
        </div>
        <div class="form-group">
            <%= form.label 'Booking Date And Time'%><span>*</span>
            <%= form.text_field :booking_date, class: 'form-control datetime_picker', placeholder:'Select Date and Time'%>
        </div>
        <div class="form-group">
            <%= form.label 'Cleaner Email'%><span>*</span>
            <%= form.text_field :email, class: 'form-control', placeholder:'Enter Cleaner Email'%>
        </div>
        <%= form.submit 'Booking', class: 'btn btn-success'%>
    <% end %>
</div>
