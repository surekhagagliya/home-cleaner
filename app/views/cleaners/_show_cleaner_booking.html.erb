<!-- The Modal -->
<div id="post-modal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Cleaner Booking</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <!-- Modal body -->
            <div class="modal-body">
                <div class="jumbotron booking-bg">
                    <h3><strong><%= @cleaner.first_name%> <%= @cleaner.last_name%></strong></h3>
                    <table class="table table-hover booking_table">
                        <thead class="thead-dark">
                            <th>City</th>
                            <th>Booking</th>
                            <th>Customer</th>
                            <th>Phone No.</th>
                            <th>Customer Address</th>
                        </thead>
                        <tr>
                            <!--------Booking Details--------------->
                            <% @cleaner.bookings.each do |booking| %>
                            <tr>
                                <td><%= booking.city.name%></td>
                                <td><%= booking.booking_date.strftime("%m-%b-%Y at %H:%M %p")%></td>
                                <td><%= booking.user.profile.first_name %> <%= booking.user.profile.last_name %></td>
                                <td><%= booking.user.profile.mobile_no %></td>
                                <td><%= booking.user.profile.address %></td>
                            </tr>
                            <% end %>
                        </tr>
                    </table>
                </div>
            </div>
            <!-- Modal footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>